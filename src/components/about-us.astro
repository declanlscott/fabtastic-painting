---
import { getImage, Picture } from "astro:assets";


import aboutUs from "../assets/about-us.jpg";
import paintBrushStroke from "../assets/paint-brush-stroke.png";
import { FadeIn } from "./fade-in";

const backgroundImage = await getImage({ src: aboutUs, format: "webp" });
---

<div
  class="bg-center bg-no-repeat bg-cover bg-blend-lighten bg-white/80"
  style={`background-image: url(${backgroundImage.src})`}
>
  <div class="flex-col md:px-8 px-4 md:py-20 py-10">
    <FadeIn client:load>
      <div class="grid lg:w-80 md:w-64 w-56 mx-auto">
        <div class="row-start-1 col-start-1">
          <Picture src={paintBrushStroke} alt="" formats={["avif", "webp"]} />
        </div>

        <h2
          class="row-start-1 col-start-1 relative grid lg:text-5xl md:text-4xl text-3xl font-semibold text-secondary text-center items-center uppercase"
        >
          About Us
        </h2>
      </div>
    </FadeIn>

    <FadeIn client:load>
      <hr class="border-secondary w-48 mx-auto my-7" />
    </FadeIn>

    <FadeIn client:load>
      <p
        class="text-center lg:max-w-4xl md:text-base text-sm text-light text-secondary mx-auto"
      >
        Fabtastic Painting is a woman-owned company founded in 2018 with the
        goal of providing high-quality and affordable painting services to the
        Corridor &amp; Eastern Iowa. With over 35 years combined experience in
        the construction industry, we decided to focus and specialize in the one
        area we enjoy and take pride in...painting! Call us today about your
        next painting project, we look forward to working with you to make it <i
          >Fabtastic</i
        >!
      </p>
    </FadeIn>

    <FadeIn client:load>
      <div class="flex">
        <div class="mx-auto mt-10 md:mt-20 mb-4">
          <a
            href="/about-us"
            class="px-4 py-2 text-lg text-secondary font-bold bg-primary border border-tertiary rounded-full hover:bg-primary-light transition duration-200 uppercase"
            >Read More</a
          >
        </div>
      </div>
    </FadeIn>
  </div>
</div>
